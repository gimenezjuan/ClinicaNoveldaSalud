@model ClinicaNoveldaSalud.Models.ViewModels.PatientViewModel

@{
    ViewData["Title"] = "Editar Paciente";
}

<h1 class="text-novelda">@ViewData["Title"]</h1>

<hr class="mt-4 mb-3" />
<h5 class="text-novelda">🧾 Datos del paciente</h5>
<form asp-action="Edit"
      asp-route-id="@Model.Id"
      enctype="multipart/form-data"
      class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger">
        ⚠️ Por favor, revisa los errores del formulario.
    </div>
    <input type="hidden" asp-for="Id" />

    <!-- Datos básicos -->
    <div class="col-md-6">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="BirthDate" class="form-label"></label>
        <input asp-for="BirthDate" type="date" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Phone" class="form-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <h5 class="text-novelda mt-4">🏥 Información adicional</h5>
    <!-- Aseguradora -->
    <div class="col-md-6">
        <label asp-for="InsurerName" class="form-label"></label>
        <input asp-for="InsurerName" class="form-control" />
        <span asp-validation-for="InsurerName" class="text-danger"></span>
    </div>

    <!-- Departamento (nuevo) -->
    <div class="col-md-6">
        <label asp-for="DepartmentName" class="form-label"></label>
        <input asp-for="DepartmentName" class="form-control" />
        <span asp-validation-for="DepartmentName" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-novelda">💾 Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-outline-secondary">❌ Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
