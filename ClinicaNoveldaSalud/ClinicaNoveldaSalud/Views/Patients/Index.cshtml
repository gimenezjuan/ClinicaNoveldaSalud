@model ClinicaNoveldaSalud.Models.ViewModels.PatientViewModel

@{
    ViewData["Title"] = "Editar Paciente";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" enctype="multipart/form-data" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <!-- Datos básicos -->
    <div class="col-md-6">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="BirthDate" class="form-label"></label>
        <input asp-for="BirthDate" type="date" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Phone" class="form-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <!-- Aseguradora y departamento -->
    <div class="col-md-6">
        <label asp-for="InsurerName" class="form-label"></label>
        <input asp-for="InsurerName" class="form-control" />
        <span asp-validation-for="InsurerName" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="DepartmentName" class="form-label"></label>
        <input asp-for="DepartmentName" class="form-control" />
        <span asp-validation-for="DepartmentName" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}