@model IEnumerable<ClinicaNoveldaSalud.Models.Patient>

@{
    ViewData["Title"] = "Pacientes";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo paciente</a>
</p>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input type="text"
               name="search"
               value="@(ViewData["Search"] ?? "")"
               class="form-control"
               placeholder="Buscar nombre..." />
    </div>
    <div class="col-auto">
        <input type="text"
               name="deptFilter"
               value="@(ViewData["DeptFilter"] ?? "")"
               class="form-control"
               placeholder="Departamento..." />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-outline-secondary">Filtrar</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Fecha de nacimiento</th>
            <th>Aseguradora</th>
            <th>Departamento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.BirthDate?.ToString("dd/MM/yyyy")</td>
                <td>@item.InsurerName</td>
                <td>
                    @(
                        item.PatientDepartments
                            .OrderByDescending(pd => pd.CreatedAt)
                            .Select(pd => pd.DepartmentName)
                            .FirstOrDefault()
                            ?? "Sin departamento"
                        )
            </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-sm btn-info">Ver</a>
                    <a asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id"
                       class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
